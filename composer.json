{
    "name": "regur/lmvc-database-migration",
    "description": "A lightweight migration system for PHP applications.",
    "type": "library",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.4",
        "symfony/console": "^5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Regur\\LMVC\\Framework\\Database\\": "src/Database",
            "Regur\\LMVC\\Framework\\Cli\\": "src/Cli",
            "Regur\\LMVC\\Framework\\Bin\\": "bin"
        }
    },
    "bin": [
        "bin/lmvcdb"
    ],
    "scripts": {
        "post-install-cmd": [
            "@php vendor/bin/lmvcdb install"
        ],
        "post-autoload-dump": [
            "Regur\\LMVC\\Framework\\Database\\Init\\Install::copyCommand"
        ]
    },
    "authors": [
        {
            "name": "Ravi Majithiya",
            "email": "ravi.majithiya@regur.net",
            "homepage": "https://www.regur.net",
            "role": "Backend Developer"
        }
    ],
    "license": "MIT",
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist"
    }
}
